{{>layout/pools/header}}
<h1>Admin Page - Pool</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-8">
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>풀 번호</th>
            <th>서브젝트 이름</th>
            <th>생성 날짜</th>
            <th>마감 날짜</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#pools}}
            <tr>
                <td>{{id}}</td>
                <td>{{subject.name}}</td>
                <td>{{createdAt}}</td>
                <td>{{closedAt}}</td>
                <td><button id="btn-delete" class="btn btn-info active" role="button">Delete</button></td>
            </tr>
        {{/pools}}
        </tbody>
    </table>
</div>
{{>layout/pools/footer}}
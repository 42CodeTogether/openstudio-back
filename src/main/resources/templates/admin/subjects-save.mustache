{{>layout/subjects/header}}

<h1>게시글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="name">서브젝트 제목</label>
                <input type="text" class="form-control" id="name" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="circle"> 서클 </label>
                <input type="text" class="form-control" id="circle" placeholder="서클을 입력하세요">
            </div>
            <div class="form-group">
                <label for="pdfRef"> pdf 주소 </label>
                <input type="text" class="form-control" id="pdfRef" placeholder="pdf 주소를 입력하세요">
            </div>
            <div class="form-group">
                <label for="description"> 서브젝트 설명 </label>
                <textarea class="form-control" id="description" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <a href="/admin/subjects" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

{{>layout/subjects/footer}}